<div id="event-<%=@count%>" class="box<% event.category_list.each do |c| %> col<%= c.value%><% end %>">
	<% if !event.flyer.nil? and event.flyer.exists?%>
		<img src="<%= event.flyer.url(:small) %>"/>
	<% else %>
		<img src="/images/default-flyer.png"/>
	<% end %>
	<h3><%= event.name %></h3>
	<p><%= event.time.strftime("%A, %b. %d") %></p>
</div>
<div id="event-<%=@count%>-desc" class="reveal-modal event-desc">
	<div class="m-topbar">"Viewing Event"
		<span class="m-helptext">Click anywhere outside of this box to close.</span>
	</div>
	<div class="m-title">
		<h1><%= event.name %></h1>
		<h2>Organized by <%= event.user.andrew_id %></h2>
	</div>
	<div class="m-flyer">
		<% if !event.flyer.nil? and event.flyer.exists?%>
		<img class="overlay" src="/images/gradient-overlay.png">
		<img src="<%= event.flyer.url(:small) %>"/>
		<% else %>
		<img src="/images/default-flyer.png"/>
		<% end %>
	</div>
	<div class="m-details">
		<div>
			<h3>Time</h3>
			<p><%= event.time.strftime("%B, %A %d, at %l:%M %P") %></p>
		</div>
		<div>
			<h3>Location</h3>
			<p><%= event.location %></p>
		</div>
		<div>
			<h3>Description</h3>
			<p><%= event.description %></p>
		</div>
	</div>
	<% similar = event.get_similar %>
	<% similar.each do |e| %>
		<p><%= e.name %> | <%= e.description %></p>
	<% end %>
</div>