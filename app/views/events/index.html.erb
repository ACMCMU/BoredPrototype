<script>
	var hashCategories = new Array();

	hashCategories = <%= categories_javascript()%>;
</script>

<div class="container">	
  	<% if Event.all.empty? then %>
	<div class="paragraphtext"> Sorry, there are currently no events. Make a new event by clicking "Create an event" in the menu. <br /></div>
	<% else %>

	<ul id="category-list" class="category-list">
			<li class="active">Hot Events</li>
			<% EventsHelper::all_categories.each do |c| %>
		    	<li class = <%= "catname-" + c[1].to_s %> ><%= c[0] %></li>
		  	<% end %>
	</ul>
	<br />


	<!--<div class="leftCol">	        -->
		<div class="events-col-info">
			<h2>Click an event to see details &rarr;</h2>
			<div class="info-main">
		    	<h2 id="info-title"></h2>
		
		    	<p id="info-date"></p>
		    	<p id="info-location"></p>
		
				<p id="info-desc"></p>
		  	</div>
		</div>

	<!--</div>-->
	<% end %>
	<div id="eventscontainer">
		<% @events.each do |event| %>
		<div id ="event"><%= render event %></div>
		<% end %>
	</div>


</div>


