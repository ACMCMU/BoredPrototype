<div class="container">
  <ul class="category-list">
    <li class="active">Hot Events</li>
  <% EventsHelper::all_categories.each do |c| %>
    <li><%= c[0] %></li>
  <% end %>
  </ul>
  <!--
  <h1>Teudu <span><%= Event.all.length %> events in the next 30 days!</span></h1>
  -->
</div>

<div class="events-col-info">
  <div class="info-header"><!--<h1>Teudu</h1>--></div>
  <div class="info-main">
    <h2 id="info-title"></h2>
    <p id="info-desc"></p>

    <p id="info-date"></p>
    <p id="info-location"></p>
  </div>
</div>
<div id="events-container">
  <div class="events-col-main">
  <% @events.each do |event| %>
    <%= render event %>
  <% end %>
  </div>
</div>
