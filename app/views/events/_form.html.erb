<%#= form_for(@event, :url=>{:action=>'update', :id=>@event.id, :format=>'js'}, :html=> {:multipart=>true, :target=>'upload_frame', :method=>:put}) do |f|%>
<!--form_for(@event, :url=>events_path(:format=>'js'), :html=> {:multipart=>true, :target=>'upload_frame'})-->
<% if up %>
	<% *test = {:url=>{:action=>'update', :id=>@event.id, :format=>'js'}, :html=> {:multipart=>true, :target=>'upload_frame', :method=>:put}} %>
<% else %>
	<% *test = {:url=>events_path(:format=>'js'), :html=> {:multipart=>true, :target=>'upload_frame'}} %>
<% end %>
<%=  form_for(@event, *test)  do |f|%>
		<div class="m-topbar">Creating a New Event
	  <%= f.submit %> 
	  </div>
		<% if @event.errors.any? %>
		<div id="error_explanation">
		  <%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:

		  <ul>
		  <% @event.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		  <% end %>
		  </ul>
		</div>
		<% end %>
	  	<div class="m-title">
				<%= f.label :name %><br />
				<%= f.text_field :name%><br/>
				<h2>Organized by byee</h2>
		</div>
		<!--<div class="m-flyer-default">
				<img class="preview-indicator" src="/img/preview-indicator.png">
				<div id="m-flyer-overlay"></div>
		</div>-->
		
		
		
		<div class="m-sidebar">
				<div class="m-flyer-preview">
					<img class="preview-indicator" src="/img/preview-indicator.png">
					<div id="m-flyer-overlay"></div>
					<%= f.label :flyer %><br />
					<img src="<%= @event.flyer.url(:small) %>"/>
				</div>
				<%= f.file_field :flyer, :id=>"b-new" %>
				<!--<button id="b-edit">Change Flyer</button>
				<button id="b-new">Delete Flyer</button>-->
		</div>
					
		<div class="m-details">
			
			<div>
				<h3>Start Time</h3>
				<%= f.label :time %>
				<p><input id="date_input" type="text" /><span id="date_output"/></p>
				<p><%= f.hidden_field :time, :id => 'hidden_date_input', :value => Time.now %></p>
			</div>
			
			<!--<%#= f.label :end_time %><br />
			<%#= f.datetime_select :end_time %>
			<%#= f.text_field :end_time%><br/>-->
			

		<!--	<%#= f.label :pattern %><br />
			<%#= f.hidden_field :pattern %><br/>-->
			<div>
				<h3>Location</h3>
				<%= f.label :location %>
				<p><%= f.text_field :location%></p>
			</div>
			
			<div>
				<h3>Description</h3>
				<%= f.label :description %>
				<p><%= f.text_field :description%></p>
			</div>

			<div>
				<h3>Categories</h3>
				<%= f.label :categories %> (Choose up to 2)<br/>
				<ul id="e-cats">
				<% EventsHelper::all_categories.each do |c| %>
					<% if @event.category_list.find{|d| d.value == c.value}%>
						<li><%= check_box_tag "event[categories][]", c.value, true, {:class=>'check2'}%> <%= c.name %></li>
					<% else%>
						<li><%= check_box_tag "event[categories][]", c.value, false, {:class=>'check2'}%> <%= c.name %></li>
					<% end %>
				<% end %>
				</ul>
			</div>
		</div>
<% end %>
<iframe id='upload_frame' name="upload_frame" style="width:1px;height:1px;border:0px" src="about:blank"></iframe>